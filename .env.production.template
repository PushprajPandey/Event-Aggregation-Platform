# Backend Environment Variables Template
# Copy this to .env and fill in your values

# === REQUIRED ===

# Environment
NODE_ENV=production

# Database (MongoDB Atlas)
# Get this from: https://cloud.mongodb.com → Connect → Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://admin:YOUR_PASSWORD_HERE@sydney-events.xxxxx.mongodb.net/sydney-events?retryWrites=true&w=majority

# Google OAuth (Google Cloud Console)
# Get from: https://console.cloud.google.com → Credentials
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_client_secret

# Session Secret (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
SESSION_SECRET=your_64_character_random_string_here

# Frontend URL (Your Vercel deployment)
FRONTEND_URL=https://your-app.vercel.app

# === OPTIONAL ===

# Server Port (Railway sets this automatically)
PORT=3000

# Scraper Schedule (cron format: "0 */6 * * *" = every 6 hours)
SCRAPER_SCHEDULE=0 */6 * * *

# Scraper Timeout (milliseconds)
SCRAPER_TIMEOUT=30000

# Trust proxy (for Railway/Render)
TRUST_PROXY=true

# Secure cookies (for HTTPS)
SECURE_COOKIES=true
