# Database
MONGODB_URI=mongodb://localhost:27017/sydney-events-aggregator
MONGODB_TEST_URI=mongodb://localhost:27017/sydney-events-aggregator-test

# Server
PORT=3000
NODE_ENV=development

# Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
SESSION_SECRET=your_session_secret

# CORS
FRONTEND_URL=http://localhost:3001

# Scraping
SCRAPER_SCHEDULE=0 */6 * * *
SCRAPER_TIMEOUT=30000

# Production Environment Variables
# Set NODE_ENV=production for production deployment
# Use MongoDB Atlas connection string for MONGODB_URI
# Set FRONTEND_URL to your deployed frontend domain
# Generate secure SESSION_SECRET (use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
# Configure Google OAuth with production callback URLs