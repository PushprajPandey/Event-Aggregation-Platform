# Production Environment Variables
# Copy this file and rename to .env for production deployment

# Database - Use MongoDB Atlas for production
MONGODB_URI=your_mongodb_atlas_connection_string
MONGODB_TEST_URI=your_mongodb_atlas_test_connection_string

# Server
PORT=3000
NODE_ENV=production

# Authentication - Configure with production Google OAuth app
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
SESSION_SECRET=your_secure_session_secret_64_chars_minimum

# CORS - Set to your deployed frontend domain
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Scraping
SCRAPER_SCHEDULE=0 */6 * * *
SCRAPER_TIMEOUT=30000

# Security
TRUST_PROXY=true
SECURE_COOKIES=true